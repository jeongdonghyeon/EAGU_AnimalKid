<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.AdultProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.AdultProfileAddActivity"
            android:exported="false" />
        <activity android:name=".ui.view.findIdActivity" />
        <activity android:name=".ui.view.ChangePasswordActivity" />
        <activity android:name=".ui.view.AddDetailAdultProfileActivity"/>
        <activity android:name=".ui.view.CreateAdultProfileActivity"/>
        <activity android:name=".ui.view.registerActivity" />
        <activity android:name=".ui.view.LauncherActivity"/>
        <activity android:name=".ui.view.MainActivity"/>
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.UserProfileSetupActivity"
            tools:ignore="Instantiatable" />
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>