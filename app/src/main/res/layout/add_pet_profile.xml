<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCFF"
    tools:context=".ui.fragment.profile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF0000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/lessthansign" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="아이 프로필 관리"
            android:textColor="#00686E"
            android:textFontWeight="400"
            android:textSize="30sp" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="105dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="180dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pet_profile" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="라이언"
                android:textColor="#336991"
                android:textFontWeight="700"
                android:textSize="20sp" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="26dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="포메라니안, 14세 남"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp">

            <ImageButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/pen" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="171dp"
            android:layout_marginTop="342dp"
            android:background="@drawable/plus_icon" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
