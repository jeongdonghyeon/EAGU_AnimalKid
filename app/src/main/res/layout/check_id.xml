<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#F8FCFF">

            <ImageView
                android:id="@+id/back"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/backbutton" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="아이디 찾기"
                android:textAppearance="@style/CustomToolbarTitleText"
                android:textColor="#00686E" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="horizontal">

                <!-- 왼쪽 여백 4% -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <!-- 가운데 콘텐츠 (92%) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="290dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="96"
                    android:background="@drawable/listitem"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- 내부 왼쪽 여백 5% -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:orientation="vertical">


                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="100dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="당신의 아이디는"
                                android:textColor="#00686E"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/reenter_pw"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:background="@drawable/edittext_select"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textColorHint="#525252"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="30dp"
                        android:text="입니다."
                        android:textColor="@color/black"
                        android:layout_marginTop="150dp"
                        android:textSize="15sp"/>


                </LinearLayout>



                <!-- 내부 오른쪽 여백 5% -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

            </LinearLayout>

            <!-- 오른쪽 여백 4% -->
            <android.widget.Button
                android:id="@+id/end_edit_button"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/complete_button"
                android:text="로그인 하러 가기"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>