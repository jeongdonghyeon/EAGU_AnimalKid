<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B6F0F3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="36dp"
        android:background="#B6F0F3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/loginText"
        android:layout_marginTop="453dp"
        android:layout_marginStart="83dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/login_text"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />
    </LinearLayout>

    <ImageButton
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="84dp"
        android:layout_marginTop="500dp"
        android:contentDescription="카카오 로그인 버튼"
        android:orientation="horizontal"
        android:padding="10dp"
        android:src="@drawable/kakao_login_icon"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="84dp"
        android:layout_marginTop="571dp"
        android:contentDescription="네이버 로그인 버튼"
        android:orientation="horizontal"
        android:padding="10dp"
        android:src="@drawable/naver_login_icon"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="84dp"
        android:layout_marginTop="642dp"
        android:contentDescription="구글 로그인 버튼"
        android:orientation="horizontal"
        android:padding="10dp"
        android:src="@drawable/google_login_icon"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
